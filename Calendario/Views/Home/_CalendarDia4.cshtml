@model List<Calendario.ViewModel.SalaAulaViewModel>
@{ Layout = null; }
@{
    var a = new DateTime(2000, 1, 1, 0, 0, 0);
    var b = new DateTime(2000, 1, 2, 0, 0, 0);
}

<style>
    div.divConteudo {
        overflow-x: auto;
        white-space: nowrap;
    }

        div.divConteudo [class*="col"], /* TWBS v3 */
        div.divConteudo [class*="span"] { /* TWBS v2 */
            display: inline-block;
            float: none; /* Very important */
        }

    .divHora > li,
    .divAgenda > li {
        /*padding-right: 5px;*/
        height: 240px;
        font-size: 27px;
        color: cornflowerblue;
    }

    .divAula {
        text-align: left;
        /*margin-top: 220px;*/
        display: inline-block;
        margin-left: -41px;
    }

    .divAulaImagem {
        font-size: 14px;
        color: black;
    }

    .divAulaHorario {
        font-size: 14px;
        color: gray;
    }

    .divAulaTexto {
        font-size: 16px;
        color: cornflowerblue;
    }

    .divAulaProfessor {
        font-size: 14px;
        color: rgba(200,200,200,1);
    }

    ul {
        list-style-type: none;
    }
    
</style>

