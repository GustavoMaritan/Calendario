@{ Layout = null; }

<style>
    .divDiaGeral {
        display: flex;
    }

        .divDiaGeral:nth-child(odd) div {
            background-color: rgba(150,150,150,0.8);
        }

        .divDiaGeral:nth-child(even) div {
            background-color: rgba(200,200,200,0.8);
        }

    .divHora {
        text-align: center;
        color: black;
        font-size: 16px;
    }

    .divAgenda {
        max-height: 150px;
        width: 100%;
        overflow-y: auto;
    }

    .divHora, .divAgenda {
        border: 1px solid black;
    }
</style>

@{
    var a = new DateTime(2000, 1, 1, 0, 0, 0);
    var b = new DateTime(2000, 1, 2, 0, 0, 0);
}

<div class="divCalendario col-sm-12">
    @for (var i = a; i < b; i = i.AddMinutes(30))
    {
        <div class="col-sm-12 divDiaGeral">
            <div class="col-sm-2 divHora">@i.ToShortTimeString()</div>
            <div class="col-sm-10 divAgenda">a</div>
        </div>
    }
</div>
